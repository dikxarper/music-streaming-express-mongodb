<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&family=Mukta:wght@300;400;600;700;800&family=Noto+Sans:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css"
      integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap-theme.min.css"
      integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="css/admin.css" />

    <title>Admin</title>
  </head>

  <body>
    <div class="header_fixed">
      <table>
        <thead>
          <tr>
            <th>_id</th>
            <th>Username</th>
            <th>Email</th>
            <th>City</th>
            <th>Role</th>
          </tr>
        </thead>
        <% userInfo.forEach(function(user) { %>
        <tbody>
          <tr>
            <td><%=user._id %></td>
            <td><%=user.username %></td>
            <td><%=user.email %></td>
            <td><%=user.city %></td>
            <td><%=user.role %></td>
          </tr>
        </tbody>
        <% }) %>
      </table>
    </div>
    <div class="tabContainer">
      <div class="buttonContainer">
        <button onclick="showPanel(0)">Add user</button>
        <button onclick="showPanel(1)">Delete user</button>
        <button onclick="showPanel(2)">Edit user</button>
        <button onclick="showPanel(3)">Sort users</button>
      </div>

      <div class="tabPanel">
        <div class="center">
          <form method="POST" action="/addUser">
            <div class="text__field">
              <input
                type="text"
                autocomplete="off"
                id="username"
                name="username"
                required
                placeholder="Username"
              />
            </div>
            <div class="text__field">
              <i class="fas fa-lock"></i>

              <input
                name="password"
                type="password"
                placeholder="Password"
                id="password"
                required
              />
            </div>
            <div class="text__field">
              <i class="fas fa-lock"></i>

              <input
                name="email"
                type="email"
                placeholder="Email"
                id="email"
                required
              />
            </div>
            <div class="text__field">
              <i class="fas fa-lock"></i>

              <input
                name="city"
                type="city"
                placeholder="City"
                id="city"
                required
              />
            </div>

            <input type="submit" value="Add" />
          </form>
        </div>
      </div>
      <div class="tabPanel">
        <div class="center">
          <form method="POST" action="/deleteUser">
            <div class="text__field">
              <input
                type="text"
                autocomplete="off"
                id="username"
                name="username1"
                required
                placeholder="Username"
              />
            </div>

            <input type="submit" value="Delete" />
          </form>
        </div>
      </div>
      <div class="tabPanel">
        <div class="center">
          <form method="POST" action="/updateUsername">
            <div class="text__field">
              <input
                type="text"
                autocomplete="off"
                id="username"
                name="username2"
                required
                placeholder="Username"
              />
            </div>
            <input type="submit" value="Next" />
          </form>
        </div>
      </div>
      <div class="tabPanel">
        <form action="/sortName" method="POST">
          <button class="button1 btn-name">Sort by name</button>
        </form>
        <form action="/sortCity" method="POST">
          <button class="button2 btn-name">Sort by city</button>
        </form>
      </div>
    </div>

    <div class="uploadMusicContainer">
      <h3 class="musicContainer_title">Music upload</h3>
      <form action="/uploadInfo" method="post">
        <div class="text__field">
          <input
            type="text"
            autocomplete="off"
            id="musicName"
            name="musicName"
            placeholder="Music name"
          />
        </div>
        <div class="text__field">
          <i class="fas fa-lock"></i>

          <input
            name="musicAuthor"
            type="text"
            placeholder="Author of music"
            autocomplete="off"
            id="musicAuthor"
          />
        </div>
        <input type="submit" value="Submit" class="musicForm_submit" />
      </form>
      <form action="/uploadPict" method="post" enctype="multipart/form-data">
        <div class="pictUpload">
          <label for="pictFile" class="musicForm_label"
            >Choose picture to upload</label
          >
          <input
            type="file"
            name="pictFile"
            id="pictFile"
            class="musicForm_input"
          />
        </div>
        <input type="submit" value="Submit" class="musicForm_submit" />
      </form>
      <form action="/uploadMusic" method="post" enctype="multipart/form-data">
        <div class="musicUpload">
          <label for="musicFile" class="musicForm_label"
            >Choose music to upload</label
          >
          <input
            type="file"
            name="musicFile"
            id="musicFile"
            class="musicForm_input"
          />
        </div>
        <input type="submit" value="Submit" class="musicForm_submit" />
      </form>
    </div>

    <script src="js/admin.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js"
      integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
